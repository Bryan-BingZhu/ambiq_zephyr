config AM_SAMPLES_DEFAULTS
	bool "Enable Ambiq sample default settings"
	default n
	imply LOG
	imply LOG_DEFAULT_MINIMAL
	imply ASSERT
	imply ASSERT_NO_COND_INFO
	imply ASSERT_NO_MSG_INFO
	imply HW_STACK_PROTECTION if ARCH_HAS_STACK_PROTECTION
	help
	  Use the default configuration for Ambiq samples.
